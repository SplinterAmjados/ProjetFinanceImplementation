{% extends "FinanceBackOfficeBundle:Clients:index.html.twig" %}


{% block content %}
<style>
#table_client_morale , #table_client_physique
{
display : none ;
}
</style>


<h3>Ajouter un client</h3>
<br><br>
Nature Client
<select id="nature_client">
<option value="0">Choisir la nature du client</option>
<option value="physique">Client Physique</option>
<option value="morale">Client Moral</option>
</select>

<br><br>

<form id="form_new_client">

</form>

<div id="table_client_physique">
<table  >
<tr><td>NCIN/N°Passeport<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Nom et Prénom<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Nationnalité<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Date de naissance<span class="form-required">*</span></td><td><input type="date"></td></tr>
<tr><td>Adresse<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Ville<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Code Postal<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Tél<span class="form-required">*</span></td><td><input type="text"></td></tr>
</table>
</div>

<div id="table_client_morale">
<table  >
<tr><td>Identifiant<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Raison Sociale<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Id Gérant<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Adresse<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Ville<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Code Postal<span class="form-required">*</span></td><td><input type="text"></td></tr>
<tr><td>Tél<span class="form-required">*</span></td><td><input type="text"></td></tr>
</table>
</div>
{% endblock %}


{% block javascript %}
{{ parent() }}
<script>
$('#nature_client').on('change',function(){
	
switch ($('#nature_client').val())
{
case 'physique' :  $('#form_new_client').html($('#table_client_physique').html()); $('#form_new_client').append('<input type="submit" value="Enregistrer">'); break ;
case 'morale' : $('#form_new_client').html($('#table_client_morale').html()); $('#form_new_client').append('<input type="submit" value="Enregistrer">');break ;
default :  $('#form_new_client').html('');break ;
}
});
</script>
{% endblock %}